
@{
    ViewBag.Title = "ĐĂNG KÝ TÀI KHOẢN";
    Layout = "~/Views/Shared/_Layout_User.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
<style>
    .shapes {
        width: 40%;
        height: 50px;
        margin-top: 10px;
    }

    .content {
        clip-path: polygon(0 0, 100% 0, 90% 100%, 0 100%);
        width: 100%;
    }

    .dangky {
        background-color: white;
        border: 1px solid #d7d7d7;
        border-top: none;
    }

    .red-color {
        color: teal;
        margin-left: 2px;
    }

    tr {
        height: 40px;
    }

    td {
        color: black;
    }
</style>
@section SliderPartial
{
    <div class="shapes">
        <div class="content" style="background-color:#FFEA00; width:100%; margin-left:-2px; height:45px;">
            <h4 class="section-title px-5" style="padding-top:8px;text-align:left; "><span class="px-2">@ViewBag.Title</span></h4>
        </div>
    </div>
    <div style="width: 100%;  margin-top:-5px;"></div>
    <div class="dangky">
        <table align="center">
            @using (Html.BeginForm("DangKy", "KhachHang"))
            {
                @Html.ValidationSummary(true)
                <tr>
                    <td>Họ và tên: </td>
                    <td style="color:red;">@Html.TextBox("HoTen") @ViewData["err1"]</td>
                </tr>
                <tr>
                    <td>Tên đăng nhập:</td>
                    <td style="color:red;">@Html.TextBox("TenDN") @ViewData["err2"]</td>
                </tr>
                <tr>
                    <td>Mật khẩu:</td>
                    <td style="color:red;">@Html.TextBox("MatKhau") @ViewData["err3"]</td>
                </tr>
                <tr>
                    <td>Mật khẩu nhập lại:</td>
                    <td style="color:red;">@Html.TextBox("MatKhauNL") @ViewData["err4"]</td>
                </tr>
                <tr>
                    <td>Ngày sinh:</td>
                    <td style="color:red;"><input type="date" name="NgaySinh"</td>
                </tr>
                <tr>
                    <td>Email:</td>
                    <td style="color:red;">@Html.TextBox("Email") @ViewData["err5"] @ViewData["err7"]</td>
                </tr>
                <tr>
                    <td>Điện thoại: </td>
                    <td style="color:red;">@Html.TextBox("Dienthoai") @ViewData["err6"]</td>
                </tr>
                <tr>
                    <td>Địa chỉ: </td>
                    <td style="color:red;"><input type="text" name="DiaChi"</td>
                </tr>
                <tr>
                    <td style="text-align:center;">Bạn đã có tài khoản? <a href="@Url.Action("DangNhap","KhachHang")" style="text-decoration:none;">Đăng Nhập</a> ngay bây giờ ?</td>
                </tr>
                <tr>
                    <td></td>
                    <td style="padding-bottom:20px;">
                        <input type="submit" value="Đăng Ký" class="btn btn-warning" style="border-radius:1em; margin-left:-150px;" />
                        <button type="button" style="border-radius:1em; color:black" class="btn btn-outline-warning"><a href="@Url.Action("DangNhap","KhachHang")" style="text-decoration:none">Đăng Nhập</a><span class="bi bi-box-arrow-in-right red-color"></span></button>
                    </td>
                </tr>
            }
        </table>
    </div>


}

