@{
    ViewBag.Title = "Đăng Nhập";
    Layout = "~/Views/Shared/_Layout_User.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
<style>
    .colored {
        color: red;
    }
</style>
@section SliderPartial
{
    <div style="background-color:white; margin-top:5px; margin-left:110px; width:80%;">
        <h2 class="form-signin-heading" style="text-align:center;">
            <span id="boot-icon" class="bi bi-person-fill" style="font-size: 120px; color: rgb(0, 0, 255); -webkit-text-stroke-width: 0px; opacity: 0.5;"></span>
        </h2>
        <p style="text-align:center; color:red;">
            @ViewBag.ThongBao
        </p>
        <table align="center">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)

                if (Request.Cookies["TenDN"] != null && Request.Cookies["MatKhau"] != null)
                {
                    <tr>
                        <td>Tài Khoản: </td>
                        <td>
                            @Html.TextBox("TenDN")
                            @ViewData["Err1"]
                        </td>
                    </tr>
                    <tr>
                        <td>Mật Khẩu: </td>
                        <td>
                            @Html.Password("MatKhau")
                            @ViewData["Err2"]
                        </td>
                    </tr>
                }
                else
                {
                    <tr>
                        <td>Tài Khoản: </td>
                        <td>
                            @Html.TextBox("TenDN") 
                            @ViewData["Err1"]
                        </td>
                    </tr>
                    <tr>
                        <td>Mật Khẩu: </td>
                        <td>
                            @Html.Password("MatKhau") 
                            @ViewData["Err2"]
                        </td>
                    </tr>
                }
        <tr>
            <td></td>
            <td style="padding-top:10px; ">
                @Html.CheckBox("remember") <span style="font-style:italic">
                    Lưu thông tin đăng nhập
                </span>
            </td>
            <p style="font-style : initial; color: red; margin: 0px;">@ViewBag.ThongBao</p>
        </tr>
                <tr>
                    <td></td>
                    <td>
                        <button type="submit" value="Đăng Nhập" id="Submit" class="btn btn-warning" style="margin-top:10px; margin-bottom:15px; border-radius:1em;">
                            Đăng Nhập
                            <span class='bi bi-box-arrow-in-right colored'></span>
                        </button>
                    </td>
                </tr>
            }
        </table>
    </div>
}
