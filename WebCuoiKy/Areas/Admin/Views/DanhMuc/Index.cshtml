@model IEnumerable<WebCuoiKy.Models.DanhMuc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Quản Lý Danh Mục
    </div>
    <div>
        <div style="margin-left:16px; margin-top:10px;">
            <a href="@Url.Action("TrangChu","Admin")" class="btn btn-primary" role="button" style="background-color:cornflowerblue;"><span class="bi bi-arrow-left-short"> Trở về</span></a>
            <a href="@Url.Action("Create","DanhMuc")" class="btn btn-xs btn-primary" role="button" style="background-color:cornflowerblue;">
                <i class="fa fa-plus" aria-hidden="true"></i> Thêm
            </a><form action="" style="width:150px; float:right;">
                <div class="input-group">
                    <input type="text" name="searchString" class="form-control" placeholder="Tìm kiếm...">
                    <button class="input-group-text btn btn-primary" style="height:40px;">
                        <i class="fa fa-search"></i>
                    </button>
                </div>
            </form>
        </div>

    </div>

    <div class="card-body">
        <table style="width:100%;">
            <thead style="text-align:center;">
                <tr style="border: 1px solid black;">
                    <th style="border: 1px solid #808080;">STT</th>
                    <th style="border: 1px solid #808080;">Tên Danh Mục</th>
                    <th style="border: 1px solid #808080;">Ảnh Bìa</th>
                    <th style="border: 1px solid #808080;"></th>
                </tr>
            </thead>
            <tbody style="border: 1px solid #808080;">
                @foreach (var item in Model)
                {
                    <tr style="border: 1px solid #808080;">
                        <td style="border: 1px solid #808080; text-align:center;">@item.MaDM</td>
                        <td style="border: 1px solid #808080; text-align: center;">@item.TenDM</td>
                        <td style="border: 1px solid #808080; text-align: center;"><img src="~/img/@item.AnhBia" style="width:100px; margin-top:8px; margin-bottom:8px;" /></td>
                        <td style="text-align:center;">
                            <a href="@Url.Action("Edit", new {id = item.MaDM})" class="btn btn-xs btn-warning" role="button" style="background-color:yellow;">
                                <i class="fa-solid fa-pen-to-square" style="color:white;"></i>                            </a>
                            <a href="@Url.Action("Delete", new {id = item.MaDM})" class="btn btn-xs btn-danger" role="button" style="background-color:red;">
                                <i class="fa fa-trash" aria-hidden="true"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
